<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Danh sách sản phẩm</h1>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">Thống kê các mặt hàng</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                  <tr>
                    <th>Hãng</th>
                    <th>Tên sản phẩm</th>
                    <th>Số lượng tồn</th>
                    <th>Giá</th>
                    <th> </th>
                  </tr>
                </thead>
                <tbody>
                  {{#each products}}
                  <tr>
                    <td>{{this.producer}}</td>
                    <td>{{this.name}}</td>
                    <td>{{this.stock}}</td>
                    <td>{{this.price}}</td>
                    <td class="project-actions text-md-center">
                      {{!-- <a class="btn btn-primary btn-sm" href="#">
                        <i class="fas fa-folder">
                        </i>
                        View
                      </a> --}}
                      <form method="POST" action="/products/{{this._id}}?_method=DELETE">
                        <a class="btn btn-info btn-sm" href="/products/{{this._id}}">
                          <i class="fas fa-pencil-alt">
                          </i>
                          Edit
                        </a>
                        <input class="btn btn-danger btn-sm" type="submit" value="Delete">
                      </form>
                    </td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->
