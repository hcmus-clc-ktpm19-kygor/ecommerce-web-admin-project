<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Cập nhật thông tin đơn hàng</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <form action="/products" method="POST">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Thông tin cơ bản</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="inputName">Tên đơn hàng</label>
                                <input type="text" id="inputName" name="category" class="form-control" value="{{order.name}}" readonly>
                            </div>
                        <div class="form-group">
                             <label for="inputState">Trạng thái</label>
                                <select class="custom-select rounded-0" id="inputState">
                                    <option selected>Hoàn thành</option>
                                    <option>Đang giao</option>
                                    <option>Đang chờ</option>
                                </select>
                         </div>
                            <div class="form-group">
                                <label for="inputOrgin">Giá</label>
                                <input type="text" id="inputOrgin" name="origin" class="form-control" value="{{order.price}}"  readonly>
                            </div>
                            <div class="form-group">
                                <label for="inputMaint">Phí vận chuyển</label>
                                <input type="number" id="inputMaint" name="insurance" class="form-control" value="{{order.shipping_fee}}"  readonly>
                            </div>
                            <div class="form-group">
                                <label for="inputColor">Địa chỉ</label>
                                <input type="text" id="inputColor" name="color" class="form-control" value="{{order.address}}"  readonly>
                            </div>
                            <div class="form-group">
                                <label for="inputStock">Mã khách hàng</label>
                                <input type="number" id="inputStock" name="stock" class="form-control" value="{{order.customer_id}}"  readonly>
                            </div>
                            <div class="form-group">
                                <label for="inputProducer">Hình thức thanh toán</label >
                                <input type="text" id="inputProducer" name="producer" class="form-control" value="{{order.payment}}"  readonly>
                            </div>

                        </div>
                    </div>
                        <!-- /.card -->

                <div class="row">
                    <div class="col-12">
                        <a href="/products" class="btn btn-secondary">Hủy</a>
                        <input type="submit" value="Thêm sản phẩm" class="btn btn-success float-right">
                    </div>
                </div>
        </form>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
